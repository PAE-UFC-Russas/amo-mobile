{
  "cli": {
    "version": ">= 0.55.1",
    "appVersionSource": "remote"
  },
  "build": {
    "production-app1": {
      "env": {
        "APP": "app1"
      },
      "channel": "production",
      "releaseChannel": "production-v1",
      "distribution": "store",
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      }
    },
    "development": {
      "distribution": "internal",
      "channel": "development",
      "releaseChannel": "development",
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      }
    },
    "production": {
      "extends": "production-app1",
      "env": {
        "APP": "main"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./path-to-key.json",
        "track": "production"
      },
      "ios": {
        "appleId": "your@apple.id",
        "ascAppId": "1234567890",
        "appleTeamId": "ABCD1234"
      }
    }
  }
}